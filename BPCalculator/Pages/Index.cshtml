@page
@model BPCalculator.Pages.BloodPressureModel

@{
    ViewData["Title"] = "BP Category Calculator";
}

<h2>BP Category Calculator</h2>

<form method="post">
    <div>
        <label>Systolic</label>
        <input asp-for="BP.Systolic" class="form-control" />
        <span asp-validation-for="BP.Systolic" class="text-danger"></span>
    </div>

    <div>
        <label>Diastolic</label>
        <input asp-for="BP.Diastolic" class="form-control" />
        <span asp-validation-for="BP.Diastolic" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

@if (Model.BP != null && Model.ErrorMessage == null)
{
    <h3 class="mt-4">Result</h3>

    <p><strong>Category:</strong> @Model.BP.Category</p>

    @if (!string.IsNullOrEmpty(Model.BP.MedicationMessage))
    {
        <p><strong>Medication Advice:</strong> @Model.BP.MedicationMessage</p>
    }
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
